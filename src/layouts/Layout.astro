---
import { HeadHrefLangs } from 'astro-i18next/components';
import { Schema } from 'astro-seo-schema';
import '@/styles/global.css';
import Footer from '@/components/Footer.astro';
import Navbar from '@/components/Navbar.astro';

const currentLanguage = 'en';

const { schema = null, title = null, description = null } = Astro.props;
---

<!doctype html>
<html lang={currentLanguage}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    { schema && <meta property="og:type" content="article"> }
    { schema && <meta property="og:title" content={schema.name}> }
    { schema && <meta property="og:image" content={schema.image}> }
    { schema && <meta property="og:url" content={schema.url}> }

    <link rel="icon" type="image/png" href="/otibeguni-logo.png" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <HeadHrefLangs />
    {schema && <Schema item={schema} />}
  </head>
  <body>
    <Navbar />
    <main class="container mx-auto pt-4 pb-12">
      <slot />
    </main>
    <Footer />
  </body>
</html>
