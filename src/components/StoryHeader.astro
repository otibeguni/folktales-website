---
// src/components/story/StoryHeader.astro
import type { IStory, MetadataItem } from '@/types';

interface Props {
  story: IStory;
  metadata: MetadataItem;
}

const { story, metadata } = Astro.props;
const { title, slug } = story;
---

<!-- NEW: Integrated Header Section -->
<div class="border-base-200 border-b p-6 text-center md:p-10">
  <div class="flex justify-center">
    <img
      src={metadata.cover_image ?? `https://placehold.co/150x150/f0f0f0/333333?text=${slug.toUpperCase().charAt(0)}`}
      alt={`Cover illustration for ${title}`}
      class="-mb-20 h-40 w-40 rounded-lg object-cover shadow-lg md:-mb-28 md:h-56 md:w-56"
    />
  </div>
</div>

<div class="pt-20 text-center">
  <h1 class="mt-2 text-3xl leading-tight font-bold md:text-5xl">{title}</h1>
</div>
